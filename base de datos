
use deporte

create table tblusuario (
id_user int identity (1,1),
nombre varchar (50) not null,
primary key (id)
)
create table tblescenario(
id_esc int identity (1,1),
nombre varchar (50) not null,
tipo ('cancha futbol de buga','cancha futbol del llano','coliseo cubierto llano','coliseo san judas','ludoteka','gimnasio','pista bicicross' )not null,
primary key (id)
)


create table monitor(
id_mon int identity (1,1),
nom varchar (50) not null,
telefono int not null,
email varchar (50)not null,
deporte varchar (50)not null,
id_esc int not null,
primary key (id_mon),
foreign key (id_esc) references  tblescenario(id_esc)
on delete cascade on update cascade
)

create table tblhorario(
id_hor int identity(1,1),
fecha datetime not null,
hora_comienzo time not null,
hora_final time not null,
id_mon int not null,
id_esc int not null,
primary key (id_hor)
foreign key (id_mon) references  tblmonitor(id_mon)
on delete cascade on update cascade,
foreign key (id_esc) references  tblescenario(id_esc)
on delete cascade on update cascade
)


create tblreserva(
id_res int identity (1,1),
primary key (id_res)
)